<script>
  function clearTextArea() {
    document.getElementById('textArea').value = '';
  }
</script>

<%= form_with model: Message.new, remote: true do |form| %>
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: 'textArea' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="messages" />
</table>
